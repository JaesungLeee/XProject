<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    tools:context=".signup">

    <EditText
        android:id="@+id/edit_id_signup"
        android:layout_width="264dp"
        android:layout_height="65dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:textColor="#EEE6E6"
        android:textColorHint="#EEE6E6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginStart="8dp" />

    <EditText
        android:id="@+id/edit_pw_signup"
        android:layout_width="264dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="#EEE6E6"
        android:textColorHint="#EEE6E6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_id_signup"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginStart="8dp" />

    <EditText
        android:id="@+id/edit_name_signup"
        android:layout_width="264dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:textColor="#EEE6E6"
        android:textColorHint="#EEE6E6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_pw_signup"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginStart="8dp" />

    <EditText
        android:id="@+id/edit_phoneNum_signup"
        android:layout_width="264dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="phone"
        android:textColor="#EEE6E6"
        android:textColorHint="#EEE6E6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_name_signup"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginStart="8dp" />

    <Button
        android:id="@+id/signUp_btn"
        android:layout_width="180dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:text="회원가입"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_phoneNum_signup"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginStart="8dp" />

    <ImageView
        android:id="@+id/hufsiceLogo"
        android:layout_width="377dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp_btn"
        app:layout_constraintVertical_bias="0.092"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginStart="8dp"
        app:srcCompat="@drawable/hufsice" />

</androidx.constraintlayout.widget.ConstraintLayout>